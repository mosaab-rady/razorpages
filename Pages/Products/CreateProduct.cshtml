@page
@model CreateProductModel
@{
	ViewData["Title"]="Create New Product";
}


<div class="d-flex justify-content-center">
	 <div class="col-md-4">
        <form method="post">
        <legend class="text-primary">Create New Product</legend>
        @* <div asp-validation-summary="All" class="text-danger"></div> *@
            <div class="form-group mt-2">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" type="number" min="1" max="1000" class="form-control" />
                <span  asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Product.Type" class="control-label"></label>
                <input asp-for="Product.Type"  class="form-control" />
                <span asp-validation-for="Product.Type" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Product.summary" class="control-label"></label>
                <textarea  asp-for="Product.summary" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Product.summary" class="text-danger"></span>
            </div>
            <div  class="form-group mt-2 d-flex align-items-center justify-content-between ">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="text-info text-capitalize" asp-page="/Products/Index" >
			    back to products
		        </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
